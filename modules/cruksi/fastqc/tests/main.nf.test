nextflow_process {

    name "Test Process FASTQC"
    script "../main.nf"
    process "FASTQC"

    tag "modules"
    tag "modules_cruksi"
    tag "fastqc"

    test("fastqc - single end") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ],
                    [ file('https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/illumina/amplicon/sample1_R1.fastq.gz', checkIfExists: true) ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.html.size() == 1 },
                { assert process.out.zip.size() == 1 },
                { assert process.out.versions.size() == 1 },
                // Test file existence and properties instead of exact checksums
                { assert path(process.out.html.get(0).get(1)).exists() },
                { assert path(process.out.html.get(0).get(1)).size() > 1000 }, // HTML should be > 1KB
                { assert path(process.out.zip.get(0).get(1)).exists() },
                { assert path(process.out.zip.get(0).get(1)).size() > 1000 }, // ZIP should be > 1KB
                // Only snapshot the versions file (most stable across environments)
                { assert snapshot(process.out.versions).match("versions_single") }
            )
        }
    }

    test("fastqc - paired end") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    [ 
                        file('https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/illumina/amplicon/sample1_R1.fastq.gz', checkIfExists: true),
                        file('https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/illumina/amplicon/sample1_R2.fastq.gz', checkIfExists: true)
                    ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.html.size() == 1 },
                { assert process.out.zip.size() == 1 },
                { assert process.out.versions.size() == 1 },
                // Test that we get 2 HTML files for paired-end
                { assert process.out.html.get(0).get(1).size() == 2 },
                { assert process.out.zip.get(0).get(1).size() == 2 },
                // Check files exist and have reasonable sizes
                { assert path(process.out.html.get(0).get(1)[0]).exists() },
                { assert path(process.out.html.get(0).get(1)[1]).exists() },
                { assert path(process.out.html.get(0).get(1)[0]).size() > 1000 },
                { assert path(process.out.html.get(0).get(1)[1]).size() > 1000 },
                // Only snapshot the versions file
                { assert snapshot(process.out.versions).match("versions_paired") }
            )
        }
    }

    test("fastqc - stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:false ],
                    [ 
                        file('https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/illumina/amplicon/sample1_R1.fastq.gz', checkIfExists: true),
                        file('https://raw.githubusercontent.com/nf-core/test-datasets/viralrecon/illumina/amplicon/sample1_R2.fastq.gz', checkIfExists: true)
                    ]
                ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.html.size() == 1 },
                { assert process.out.zip.size() == 1 },
                { assert process.out.versions.size() == 1 },
                // For stub, just check files exist
                { assert path(process.out.html.get(0).get(1)).exists() },
                { assert path(process.out.zip.get(0).get(1)).exists() }
            )
        }
    }
}
